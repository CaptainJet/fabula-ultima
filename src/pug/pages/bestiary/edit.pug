          .spell
            - const [name, att1, att2] = spine.spells.delete;
            +chimera-span(name)
            span ✦
            +fabula-check(att1, att2)
        +chimera-block('edit')
          .spell
            each field in spine.spells.hidden
              +chimera-hidden(field)
            each field in spine.spells.fields
              +chimera-input(field)

    .notes
      h2.notes--heading(data-i18n=spine.notes.heading.name)= spine.notes.heading.label
      +chimera-repeater('notes')
        +chimera-block('delete')
          .note
            - const [name] = spine.notes.delete;
            +chimera-span(name)
        +chimera-block('edit')
          .note
            each field in spine.notes.hidden
              +chimera-hidden(field)
            each field in spine.notes.fields
              +chimera-input(field)

    .specials
      h2.specials--heading(data-i18n=spine.specials.heading.name)= spine.specials.heading.label
      +chimera-repeater('specials')
        +chimera-block('delete')
          .special
