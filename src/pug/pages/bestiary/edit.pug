            +chimera-span(name)
        +chimera-block('edit')
          .special
            each field in spine.specials.hidden
              +chimera-hidden(field)
            each field in spine.specials.fields
              +chimera-input(field)

    .actions
      h2.actions--heading(data-i18n=spine.actions.heading.name)= spine.actions.heading.label
      +chimera-repeater('actions')
        +chimera-block('delete')
          .action
            - const [name] = spine.actions.delete;
            +chimera-span(name)
        +chimera-block('edit')
          .action
            each field in spine.actions.hidden
              +chimera-hidden(field)
            each field in spine.actions.fields
              +chimera-input(field)

    .raregear
      h2.raregear--heading(data-i18n=spine.raregear.heading.name)= spine.raregear.heading.label
