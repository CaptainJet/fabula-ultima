mixin character-view(spine)
  section.character--view
    +traits-view(spine)
    +statistics-view(spine)

    .character__controls
      +status-effects-view(spine)
      +controllers-view(spine)

    // TODO tab navigation

    +rolls-view(spine)

    +bonds-view(spine)
    +fabula-points-view(spine)
    +experience-points-view(spine)

    +weapons-view(spine)
    +spells-view(spine)
    +rituals-view(spine)

    // TODO view Backpack
    // TODO view Journal
    +equipment-view(spine)

    +inventory-view(spine)

    +classes-view(spine)

    +journal-view(spine)

mixin character-edit(spine)
  section.character--edit
    +traits-edit(spine)
    +attributes-edit(spine)
    +navbar-edit(spine)

    //- pages
    .character__stats
      +statistics-edit(spine)
      +status-immunity-edit(spine)
      +rolls-edit(spine)

    .character__bonds
      +bonds-edit(spine)

    .character__classes
      +classes-edit(spine)

    .character__equipment
      +weapons-edit(spine)
      +armors-edit(spine)
      +shields-edit(spine)
      +accessories-edit(spine)

    .character__backpack
      +inventory-edit(spine)
      +projects-edit(spine)
      +items-edit(spine)

    .character__magic
      +spells-edit(spine)
      +rituals-edit(spine)

    .character__journal
      +notes-edit(spine)
      +quests-edit(spine)
      +friends-edit(spine)
      +creatures-edit(spine)
      +locations-edit(spine)
      +artifacts-edit(spine)
      +discoveries-edit(spine)

    .character__settings
      +settings(spine)
